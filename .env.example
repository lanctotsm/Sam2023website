# --- Auth ---
# Required for Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-me-in-production

# --- Admin & Dev ---
# The email that will be automatically granted base admin permissions
BASE_ADMIN_EMAIL=dev@local
# Set to true to enable the "Dev Login" provider (no Google account needed)
DEV_AUTH_BYPASS=true

# --- Database ---
# Path to the SQLite database file
CMS_DB_PATH=/app/data/cms.db

# --- Deployment ---
# Image to use in production (Lightsail)
HERON_IMAGE=ghcr.io/OWNER/REPO/heron:latest

# --- Storage (S3 / MinIO) ---
S3_REGION=us-east-1
S3_BUCKET=cms
# For local dev with MinIO: http://localhost:9000/cms
# For production with CloudFront: https://d123.cloudfront.net
S3_PUBLIC_BASE_URL=http://localhost:9000/cms
# For local dev with MinIO: http://minio:9000
# Leave empty for standard AWS S3
S3_ENDPOINT_URL=http://minio:9000
S3_FORCE_PATH_STYLE=true
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# --- Frontend Public ---
# Matches S3_PUBLIC_BASE_URL
NEXT_PUBLIC_IMAGE_BASE_URL=http://localhost:9000/cms
